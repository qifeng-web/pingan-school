<view class="tab-wrap">
    <view class="tab">
        <view bindtap="changeTab" data-textTab="答题模式">
            <text class="{{selectInd?'blue':''}}">答题模式</text>
            <span class="{{selectInd?'span':''}}"></span>
        </view>
        <view bindtap="changeTab" data-textTab="背题模式">
            <text class="{{!selectInd?'blue':''}}">背题模式</text>
            <span class="{{!selectInd?'span':''}}"></span>
        </view>
    </view>
</view>
<view style="height: 80rpx;"></view>
<view style="height:20rpx;background:#f5f6f7"></view>
<view class="address-green" wx:if="{{recmend}}">已自动回到上次答题的位置</view>
<import src="../public/moniq/moniq.wxml"></import>
<view class="page">
    <video autoplay controls="{{false}}" id="myVideo" loop="{{true}}" objectFit="cover" src="{{videoMedia}}" style="width:90%;height:30%;margin-left:5%" wx:if="{{videoMedia&&videoctrl}}"></video>
    <swiper autoplay="{{autoplay}}" bindchange="pageChange" circular="{{xiejie}}"
        class="{{videoMedia&&videoctrl?'flexauto':'noflex'}}" current="{{current}}" duration="500"
        indicatorDots="{{false}}" interval="{{interval}}" wx:if="{{!iconIndtwo}}">
        <swiper-item wx:for="{{questions}}" wx:for-item="downContent" wx:key="index">
            <template is="answer" data="{{downContent:downContent,textTab:textTab,videoctrl:videoctrl}}"></template>
        </swiper-item>
    </swiper>
</view>
<view bindtap="_updown" class="footer-mark" wx:if="{{iconInd&&questions.length}}"></view>
<view class="footer {{iconInd?'test-one':'test-active'}}">
    <view class="header">
        <view bindtap="_updown" class="h-left">
            <view>
                <image src="/images/q_answer_sheet_right.png"></image>
                <text style="color:#33c500">{{greenNum}}</text>
            </view>
            <view>
                <image src="/images/q_answer_sheet_wrong.png"></image>
                <text style="color:#ff3030">{{redNum}}</text>
            </view>
            <view>
                <image src="/images/q_answer_sheet_number.png"></image>
                <text>{{indexInd*1+1}}/{{idarr.length}}</text>
            </view>
        </view>
        <view bindtap="delCollect" class="h-right" wx:if="{{!iconInd}}">
            <image src="/images/toolbar_icon_deletd_normal_protect@2x.png"></image>
            <text>移除</text>
        </view>
        <view bindtap="del_data" class="h-right" wx:if="{{iconInd}}">
            <text>清空错题</text>
        </view>
    </view>
    <view class="{{iconInd?'wrap-icon-active':'wrap-icon'}}">
        <scroll-view scrollY style="height: 100%">
            <view class="icon-circle" wx:if="{{iconIndtwo}}" wx:for="{{iconcircle}}" wx:for-index="idx1"
                wx:for-item="itemName1" wx:key="key">
                <view class="circle-title" wx:if="{{itemName1.title}}">
                    {{itemName1.title}}({{itemName1.question_ids.length}}题)</view>
                <view class="circle-wrap">
                    <view bindtap="jumpToQuestion" data-color="{{orderPX[itemName2]}}" data-id="{{itemName2}}"
                        data-index="{{itemName1.len+idx2}}" wx:if="{{orderPX[itemName2]!=true}}"
                        wx:for="{{itemName1.question_ids}}" wx:for-index="idx2" wx:for-item="itemName2" wx:key="key2">
                        <view class="now"
                            wx:if="{{orderPX[itemName2]!='red'&&orderPX[itemName2]!='green'&&orderPX[itemName2]!='blue'}}">
                            {{itemName1.len+idx2+1}}</view>
                        <view class="red" wx:if="{{orderPX[itemName2]=='red'}}">{{itemName1.len+idx2+1}}</view>
                        <view class="green" wx:if="{{orderPX[itemName2]=='green'}}">{{itemName1.len+idx2+1}}</view>
                        <view class="blue" wx:if="{{orderPX[itemName2]=='blue'}}">{{itemName1.len+idx2+1}}</view>
                    </view>
                </view>
            </view>
        </scroll-view>
    </view>
</view>